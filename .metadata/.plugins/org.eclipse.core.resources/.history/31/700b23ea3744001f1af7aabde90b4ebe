package com.zensar.spring_core.beans;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;
import org.springframework.stereotype.Controller;

@Component
public class Person {

	@Value("${id}")
	private int id;

	@Value("${name}")
	private String name;
	@Value("${age}")
	private int age;
	
	
	private Address address;
	

	public Person() {
		super();
		System.out.println("public Person()");
	}


	public Person(int id, String name, int age) {
		super();
		this.id = id;
		this.name = name;
		this.age = age;
		System.out.println("public Person(int id, String name, int age)");
	}
	
	
	@Autowired
	public Person(int id, String name, int age,@Autowired Address address) {
		super();
		this.id = id;
		this.name = name;
		this.age = age;
		this.address = address;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		System.out.println("public void setId(int id)");
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}
	
	

	public Address getAddress() {
		return address;
	}

	//@Autowired //filed
	public void setAddress(Address address) {
		this.address = address;
	}

	@Override
	public String toString() {
		return "Person [id=" + id + ", name=" + name + ", age=" + age + ", address=" + address + "]";
	}

	
}
