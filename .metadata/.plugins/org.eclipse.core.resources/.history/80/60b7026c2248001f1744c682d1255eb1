package com.zensar.spring_boot_app_ide.controller;

import java.util.Arrays;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.zensar.spring_boot_app_ide.dto.ProductDto;

@RestController
public class ProductController {
	
	
	
	// CRUD 
	
	//@RequestMapping(value = "/product",method = {RequestMethod.GET,RequestMethod.POST})
	
	
	@GetMapping(value = "/product")
	public ProductDto getProduct() {
		System.out.println("I am inside public ProductDto getProduct() ");
		return new ProductDto(1, "HDD", 4500);
	}
	
	public List<ProductDto> getAllProducts(){
		return Arrays.asList(new ProductDto(2, "MAC", 45000),new ProductDto(3, "IPad", 45000))
	}
	

}
